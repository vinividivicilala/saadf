---
import RRSS from "./RRSS.astro";
const { style, descriptionStyle, title, description, withRRSS } = Astro.props;
---

<div
  class=`flex flex-col md:items-start sm:pl-20 justify-center p-4 leading-normal w-12/12 sm:w-11/12 md:w-6/12 ${style}`
>
  <h1
    class="mb-4 w-full sm:w-10/12 text-xl md:text-4xl font-black tracking-tight text-white leading-29"
  >
    {title}
  </h1>
<!--   <p
    class=`w-full sm:w-10/12 mb-3 text-white dark:text-white text-base md:text-lg font-bold leading-29 tracking-normal whitespace-pre-line ${descriptionStyle}`
  > -->
    <!--  {description} -->
    <article
      class=`w-full sm:w-10/12 mb-3 text-white dark:text-white text-base md:text-lg font-bold leading-29 tracking-normal whitespace-pre-line ${descriptionStyle}`
      set:html={description}
    />
 <!--  </p> -->
  <div class="flex justify-start w-full">
    {withRRSS && <RRSS />}
  </div>
</div>
